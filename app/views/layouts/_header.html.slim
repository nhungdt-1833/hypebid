header.header.site-header.affix
  .container
    nav.navbar.navbar-default.yamm
      .container-fluid
        #navbar.navbar-collapse.collapse
          = image_tag("logo.png", alt:"StockX")
          ul.nav.navbar-right
            li
              = link_to t(".browse"), "#", class:"menu-header"
            li
              = link_to t(".news"), "#", class:"menu-header"
            li
              = link_to t(".app"), "#", class:"menu-header"
            li
              = link_to t(".portfolio"), "#", class:"menu-header"
            li
              = link_to t(".about"), "#", class:"menu-header"
            li
              = link_to t(".faq"), "#", class:"menu-header"
            li
              = link_to t(".login"), "#", class:"menu-header"
            li
              = link_to t(".sign_up"), "#", class:"menu-header"
            - if user_signed_in?
              li.dropdown
                = link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"}  do
                  i.fa.fa-user
                  = current_user.name
                ul.dropdown-menu
                  li
                    = link_to t(".edit"), "#edituser", "data-toggle" => "modal", :class => 'btn btn-small edit'
                  li
                    = link_to t(".logout"), destroy_user_session_path, method: :delete
            - else
              li
                = link_to t(".sign_in"), new_user_registration_path
